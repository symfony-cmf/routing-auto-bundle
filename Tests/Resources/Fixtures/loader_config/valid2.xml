<?xml version="1.0" ?>
<auto-mapping xmlns="http://cmf.symfony.com/schema/routing_auto">
    <mapping class="stdClass"
        uri-schema="/forum/{category}/{post_name}">

        <token-provider token="category" name="method">
            <option name="method">getCategoryName</option>
        </token-provider>

        <token-provider token="post_name" name="method">
            <option name="method">getName</option>
        </token-provider>
    </mapping>
</auto-mapping>
