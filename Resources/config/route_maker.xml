<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_routing_auto.route_maker.default.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RouteMaker\DefaultMaker</parameter>
        <parameter key="cmf_routing_auto.route_maker.auto_route.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RouteMaker\AutoRouteMaker</parameter>
        <parameter key="cmf_routing_auto.route_maker.generic.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RouteMaker\GenericMaker</parameter>
        <parameter key="cmf_routing_auto.route_maker.route.class">Symfony\Cmf\Bundle\RoutingAutoBundle\AutoRoute\RouteMaker\RouteMaker</parameter>
    </parameters>

    <services>
        <service
            id="cmf_routing_auto.route_maker.default"
            class="%cmf_routing_auto.route_maker.default.class%"
            scope="prototype"
            >
            <argument type="service" id="cmf_routing_auto.route_maker.auto_route"/>
            <argument type="service" id="cmf_routing_auto.route_maker.generic"/>
            <tag name="cmf_routing_auto.route_maker" alias="default"/>
        </service>

        <service
            id="cmf_routing_auto.route_maker.auto_route"
            class="%cmf_routing_auto.route_maker.auto_route.class%"
            scope="prototype"
            >
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <tag name="cmf_routing_auto.route_maker" alias="auto_route"/>
        </service>

        <service
            id="cmf_routing_auto.route_maker.generic"
            class="%cmf_routing_auto.route_maker.generic.class%"
            scope="prototype"
            >
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <tag name="cmf_routing_auto.route_maker" alias="generic"/>
        </service>

        <service
            id="cmf_routing_auto.route_maker.route"
            class="%cmf_routing_auto.route_maker.route.class%"
            scope="prototype"
            >
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
            <tag name="cmf_routing_auto.route_maker" alias="route"/>
        </service>
    </services>
</container>
